{
  "name": "electron-auth",
  "private": true,
  "version": "0.0.0",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\" npx electronmon .",
    "build:electron": "npm run build && electron-builder",
    "dist": "npm run build && electron-builder --publish=never"
  },
  "dependencies": {
    "@react-oauth/google": "^0.12.2",
    "@reduxjs/toolkit": "^2.8.2",
    "axios": "^1.10.0",
    "child_process": "^1.0.2",
    "concurrently": "^9.2.1",
    "dns": "^0.2.2",
    "electron": "^38.3.0",
    "electron-builder": "^26.0.12",
    "electron-is-dev": "^3.0.1",
    "formik": "^2.4.6",
    "googleapis": "^164.0.0",
    "path": "^0.12.7",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hot-toast": "^2.5.2",
    "react-icons": "^5.5.0",
    "react-redux": "^9.2.0",
    "react-router-dom": "^7.6.3",
    "react-spinners": "^0.17.0",
    "redux": "^5.0.1",
    "redux-logger": "^3.0.6",
    "redux-persist": "^6.0.0",
    "vite-plugin-compression2": "^2.3.0",
    "vite-plugin-css-injected-by-js": "^3.5.2",
    "vite-plugin-pwa": "^1.1.0",
    "yup": "^1.6.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "autoprefixer": "^10.4.19",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "jsdom": "^24.1.3",
    "postcss": "^8.4.49",
    "rollup": "^4.25.0",
    "sharp": "^0.34.4",
    "tailwind-scrollbar-hide": "^4.0.0",
    "tailwindcss": "^3.4.3",
    "vite": "^6.3.5",
    "wait-on": "^8.0.0"
  },
  "build": {
    "appId": "com.example.electron-auth",
    "productName": "Electron Auth App",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "node_modules/**/*",
      "assets/**/*"
    ],
    "icon": "assets/icons/icon-512.png",
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "assets/icons/icon-512.png"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icons/icon-256.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icons/icon-512.png"
    }
  }
}
